<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


        <LinearLayout
            android:id="@+id/lay_list"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/btn_eff_list"
            android:clickable="true"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_scan_type"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/ic_scan_text"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_scan_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="0dp"
                        android:layout_toStartOf="@+id/img_heart_fav"
                        android:layoutDirection="ltr"
                        android:text="Text"
                        android:textColor="@color/duck"
                        android:textDirection="ltr"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/img_heart_fav"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="0dp"
                        android:background="@drawable/ic_heart_fav"
                        android:visibility="invisible" />


                </RelativeLayout>



                <TextView
                    android:id="@+id/txt_scan_date_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:textSize="15sp"
                    android:textColor="@color/duck"
                    android:text="6:30 AM 10/4/2021"
                    />

                <TextView
                    android:id="@+id/txt_scan_first_val"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:textSize="15sp"
                    android:textColor="@color/duck"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:text="hjhgjh yug uyy ih  uh uh uh u uu uihuihuih  uhu huhu uhu  uhu  uh"
                    />



            </LinearLayout>



        </LinearLayout>

</LinearLayout>